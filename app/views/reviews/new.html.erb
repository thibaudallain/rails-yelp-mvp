<div class="container shadow-sm bg-light p-5">
  <h1>Create a new review</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back", restaurants_path, class: "btn btn-light mt-5"%>

</div>

